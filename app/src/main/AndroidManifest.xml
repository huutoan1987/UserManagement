<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usermanagement">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".UserManagementApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UserManagement">
        <activity
            android:name=".ui.activity.master.MasterActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.UserManagement.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.detail.DetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".ui.activity.master.MasterActivity"
            android:theme="@style/Theme.UserManagement.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.master.MasterActivity" />
        </activity>
    </application>

</manifest>